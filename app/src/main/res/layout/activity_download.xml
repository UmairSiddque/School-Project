<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".examActivities.DownloadActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:padding="5dp"
    android:id="@+id/linearExamDownload">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backarrow"
            android:id="@+id/examDownloadBackIV"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exams"
            android:textColor="#213061"
            android:fontFamily="@font/poppinmedium"
            android:textSize="16sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_marginStart="12dp"
       android:layout_marginEnd="12dp"
       android:layout_marginTop="5dp"
       android:layout_marginBottom="5dp"
       android:padding="5dp"
       android:layout_below="@id/linearExamDownload"
       android:id="@+id/linearExamDownload2"
       >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Download Results"
           android:textColor="#444444"
           android:textSize="18sp"
           android:fontFamily="@font/poppinmedium"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Student Name: "
               android:textSize="13sp"
               android:fontFamily="@font/poppinregular"
               android:textColor="#999999"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Aftab Hussain"
               android:textSize="13sp"
               android:fontFamily="@font/poppinregular"
               android:textColor="#444444"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Session: "
               android:textSize="13sp"
               android:fontFamily="@font/poppinregular"
               android:textColor="#999999"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="2022-2023"
               android:textSize="13sp"
               android:fontFamily="@font/poppinregular"
               android:textColor="#444444"/>
       </LinearLayout>
   </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:layout_below="@id/linearExamDownload2"
        android:id="@+id/examDownloadRV"/>
</RelativeLayout>