<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="105dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:layout_margin="3dp"
    app:cardCornerRadius="4dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
            <ImageView
                android:id="@+id/imageForYouC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/avatar_img" />

<ImageView
    android:layout_width="35dp"
    android:layout_height="35dp"
    android:padding="1dp"
    android:id="@+id/bgIv"
    android:src="@drawable/rankbg"
    android:layout_alignParentStart="true"/>
      <ImageView
          android:layout_width="22dp"
          android:layout_height="22dp"
          android:id="@+id/rankIV"
          android:scaleType="centerCrop"
          />
        <TextView
            android:id="@+id/rankText"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="2dp"
            android:textColor="@color/white"
            android:textSize="8sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/levelText"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:layout_marginEnd="8dp"
            android:textSize="8sp"
            android:layout_alignParentRight="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/view1"
            android:background="@drawable/completed_bg"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/completedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="2dp"
        android:layout_marginTop="-18dp"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Game title"
        android:id="@+id/titleForYouC"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subject"
        android:layout_marginTop="2dp"
        android:id="@+id/subjectForYouC"/>
</LinearLayout>

</androidx.cardview.widget.CardView>