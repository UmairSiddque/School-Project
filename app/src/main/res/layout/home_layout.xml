<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearHomeL1"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/poppinmedium"
        android:textSize="13sp"
        android:textColor="#007DEA"
        android:text="Title"
        android:id="@+id/homeTitleTV"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
      android:gravity="center"
        android:text="Date"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/poppinregular"
        android:textSize="10sp"
        android:textColor="#AEB0B8"
        android:layout_alignParentRight="true"
        android:id="@+id/homeDateTV"/>
    </RelativeLayout>
</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="description"
        android:textColor="#737373"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/poppinregular"
        android:textSize="12sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_below="@id/linearHomeL1"
        android:id="@+id/homeDescTV"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/homeReadMoreTV"
        android:text="Read more..."
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_below="@id/homeDescTV"
        android:fontFamily="@font/poppinmedium"
        android:textSize="12sp"
        android:textColor="#333333"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D9D3D3"
        android:layout_below="@id/homeReadMoreTV"
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
